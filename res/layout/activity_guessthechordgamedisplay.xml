<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
   <TextView 
       android:layout_height="wrap_content"
       android:layout_width="fill_parent"
       android:id="@+id/textGuessChord_Heading"
       android:paddingTop="5dp"
       android:paddingBottom="5dp"
       android:paddingLeft="10dp"
       android:textStyle="bold"
       android:text="@string/GuessTheChordGameDisplay_Heading"/>
   <Button 
       android:layout_height="50dp"
       android:layout_width="fill_parent"
       android:id="@+id/chordPlayButton"
       android:layout_below="@id/textGuessChord_Heading"
       android:textStyle="bold"
       android:background="@color/green"
       android:text="@string/GuessTheChordGameDisplay_PlayButton"/>
   <TextView 
       android:layout_height="wrap_content"
       android:layout_width="fill_parent"
       android:id="@+id/textGuessChord"
       android:paddingTop="10dp"
       android:paddingBottom="10dp"
       android:paddingLeft="10dp"
       android:textStyle="bold"
       android:layout_below="@id/chordPlayButton"
       android:text="@string/GuessTheChordGameDisplay_OptionsHeading"/>
   <Button 
       android:layout_height="50dp"
       android:layout_width="fill_parent"
       android:id="@+id/chordGuessButton1"
       android:layout_below="@id/textGuessChord"/>
   <Button 
       android:layout_height="50dp"
       android:layout_width="fill_parent"
       android:id="@+id/chordGuessButton2"
       android:layout_below="@id/chordGuessButton1"/>       
   <Button 
       android:layout_height="50dp"
       android:layout_width="fill_parent"
       android:id="@+id/chordGuessButton3"
       android:layout_below="@id/chordGuessButton2"/>
   <TextView 
       android:layout_height="wrap_content"
       android:layout_width="fill_parent"
       android:id="@+id/textFeedbackMessage"
       android:textSize="17sp"
       android:paddingTop="10dp"
       android:paddingBottom="5dp"
       android:paddingLeft="10dp"
       android:textStyle="bold"
       android:textColor="@color/green"
       android:layout_below="@id/chordGuessButton3"/>
   <Button 
       android:layout_height="50dp"
       android:layout_width="fill_parent"
       android:id="@+id/nextButton"
       android:layout_alignParentBottom="true"
       android:text="@string/GuessTheChordGameDisplay_NextButton"/>
</RelativeLayout>
